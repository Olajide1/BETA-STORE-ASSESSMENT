                        <configuration>
                            <systemProperties>
                                <property>
                                    <name>instance-url</name>
                                    <value>${instance-url}</value>
                                </property>
                                <property>
                                    <name>grid-url</name>
                                    <value>${grid-url}</value>
                                </property>
                                <property>
                                    <name>email_list</name>
                                    <value>${email_list}</value>
                                </property>
                            </systemProperties>
                            <suiteXmlFiles>
                                <suiteXmlFile>${project.basedir}\ProdRemote.xml</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>StagingLocal</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemProperties>
                                <property>
                                    <name>instance-url</name>
                                    <value>${instance-url}</value>
                                </property>
                                <property>
                                    <name>grid-url</name>
                                    <value>${grid-url}</value>
                                </property>
                                <property>
                                    <name>email_list</name>
                                    <value>${email_list}</value>
                                </property>
                            </systemProperties>
